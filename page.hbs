{{!< default}}

{{#post}}
<article class="gh-article {{post_class}} py-[8vmin]">
    {{#match @page.show_title_and_feature_image}}
    <header class="gh-header gh-canvas grid grid-cols-canvas pb-[8vmin] text-center">
        <h1 class="gh-title text-6xl">{{title}}</h1>

        {{#if custom_excerpt}}
            <p class="gh-excerpt !text-xl mt-[3vmin]">{{custom_excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
            <figure class="gh-feature-image !col-[wide-start/wide-end] w-full mt-[8vmin]">
                <img class="w-full" src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
        {{/if}}
    </header>
    {{/match}}

    <div class="gh-content gh-canvas grid grid-cols-canvas">
        {{content}}
    </div>

</article>
{{/post}}
